[Unit]
Requires=network.target remote-fs.target
After=network.target remote-fs.target

[Service]
Type=simple
ExecStart=/opt/kafka_2.11-{{ kafka_version }}/bin/zookeeper-server-start.sh /opt/kafka_2.11-{{ kafka_version }}/config/zookeeper.properties
ExecStop=/opt/kafka_2.11-{{ kafka_version }}/bin/zookeeper-server-stop.sh
Restart=on-abnormal

[Install]
WantedBy=multi-user.target